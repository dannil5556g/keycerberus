        oss << "ðŸ› ï¸  Ð’ÐµÑ€ÑÐ¸Ñ Windows: " << osInfo.dwMajorVersion << "." << osInfo.dwMinorVersion << "\n";
        oss << "ðŸ’¾ ÐžÐ—Ð£: " << (memStatus.ullTotalPhys / (1024 * 1024)) << " MB\n";
